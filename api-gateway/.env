# Configuration principale
API_GATEWAY_PORT=8080
LOG_LEVEL=INFO
ENABLE_TELEMETRY=True

# URLs des services (utilisées en production)
AUTH_SERVICE_URL=http://auth-service:8000
REPORTS_SERVICE_URL=http://reports-service:8001
ALERTS_SERVICE_URL=http://alerts-service:8002
MAP_SERVICE_URL=http://map-service:8003
AI_SERVICE_URL=http://ai-service:8004
AUDIT_SERVICE_URL=http://audit-service:8005

# URLs de développement (utilisées si ENV=development)
DEV_AUTH_SERVICE_URL=http://localhost:8000
DEV_REPORTS_SERVICE_URL=http://localhost:8001
DEV_ALERTS_SERVICE_URL=http://localhost:8002
DEV_MAP_SERVICE_URL=http://localhost:8003
DEV_AI_SERVICE_URL=http://localhost:8004
DEV_AUDIT_SERVICE_URL=http://localhost:8005

# Configuration CORS
CORS_ORIGINS=["http://localhost:3000","https://intelligence-service.com"]

# Rate limiting
ENABLE_RATE_LIMITING=True
RATE_LIMIT_REDIS_URL=redis://redis:6379/0
DEFAULT_RATE_LIMIT=100
DEFAULT_RATE_LIMIT_PERIOD=60

# Sécurité
PROXY_SECRET_KEY=change_this_in_production
JWT_PUBLIC_KEY_FILE=./keys/public_key.pem
ENV=development

# Telemetry
PROMETHEUS_METRICS_PORT=9090
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317