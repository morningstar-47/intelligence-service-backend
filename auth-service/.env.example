# Configuration de la base de données
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD="postgres"
POSTGRES_DB=auth_service

# Configuration du service
SERVICE_NAME=auth-service
API_STR=/api
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# JWT Configuration
SECRET_KEY=change_this_to_a_secure_secret_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Clés de signature JWT (pour production)
# USE_RSA_KEYS=false
# PRIVATE_KEY_FILE=./keys/private_key.pem
# PUBLIC_KEY_FILE=./keys/public_key.pem

# Configuration CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", ]

# Configuration des rôles et niveaux d'habilitation
DEFAULT_ADMIN_MATRICULE=AD-1234A
DEFAULT_ADMIN_PASSWORD=admin_password!
DEFAULT_ADMIN_EMAIL=admin@intelligence-service.com
DEFAULT_ADMIN_FULL_NAME=Administrator

# Métriques et télémétrie
ENABLE_METRICS=false
METRICS_PORT=9100